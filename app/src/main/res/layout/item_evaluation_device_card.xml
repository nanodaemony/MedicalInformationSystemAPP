<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:id="@+id/collection_evaluation_used_device_card"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="15dp"
    android:layout_marginTop="6dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/collection_evaluation_used_device_name"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="仪器名称"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />


            <TextView
                android:id="@+id/collection_evaluation_used_device_serial_number"
                android:layout_marginStart="10dp"
                android:text="序列号"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/collection_evaluation_used_device_service_life"
                android:layout_marginStart="10dp"
                android:text="使用年限"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/collection_evaluation_has_evaluated"
                android:src="@mipmap/add4"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>