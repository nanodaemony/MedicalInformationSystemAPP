<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/observe_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#CCCCCC"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:singleLine="true"
            android:text="仪器术后评价"
            android:textColor="@color/colorBlue"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/device_evaluation_device_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />

            <LinearLayout
                android:id="@+id/device_evaluation_device_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />

            <LinearLayout
                android:id="@+id/device_evaluation_device_layout_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />

            <LinearLayout
                android:id="@+id/device_evaluation_device_layout_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />

            <LinearLayout
                android:id="@+id/device_evaluation_device_layout_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />

            <LinearLayout
                android:id="@+id/device_evaluation_device_layout_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />

        </LinearLayout>


    </ScrollView>

    <android.support.design.button.MaterialButton
        android:id="@+id/device_evaluation_button_commit"
        android:layout_gravity="right"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center"
        android:padding="3dp"
        android:text="确认提交"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse"
        android:textColor="@color/default_back_stroke_color"
        android:textSize="20sp"
        app:icon="@mipmap/update"
        app:iconPadding="3dp"
        app:iconSize="20dp"
        app:rippleColor="@android:color/white" />


</LinearLayout>