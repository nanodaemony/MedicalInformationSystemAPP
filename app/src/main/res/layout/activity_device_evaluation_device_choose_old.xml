<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/observe_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#CCCCCC"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/item" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:singleLine="true"
            android:text="仪器术后评价仪器列表"
            android:textColor="@color/colorBlue"
            android:textSize="20sp" />


    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/collection_evaluation_device_choose_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        >
    </android.support.v7.widget.RecyclerView>


    <Button
        android:id="@+id/collection_evaluation_device_choose_sure_commit"
        android:layout_margin="20dp"
        android:text="提   交"
        android:padding="10dp"
        android:background="@drawable/frame_login_button"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_width="100dp"
        android:textSize="20sp"
        android:layout_gravity="right"
        android:layout_height="wrap_content" />

</LinearLayout>