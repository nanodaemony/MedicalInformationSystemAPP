<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <!--校徽-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.95"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_image_server_path"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@mipmap/login_logo_cqu" />

    </LinearLayout>


    <!--标题：无创医疗仪器数据采集系统-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_weight="0.7"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="医疗仪器数据终端"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorPrimary"
            android:textSize="27sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/frame_login_box"
        android:orientation="vertical"
        android:padding="10dp">

        <!--User 输入框-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginStart="6dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@mipmap/user" />

            <Space
                android:layout_width="10dp"
                android:layout_height="30dp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/login_editText_userName"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:hint="用户"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginStart="6dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@mipmap/password" />

            <Space
                android:layout_width="10dp"
                android:layout_height="30dp" />

            <android.support.design.widget.TextInputLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/login_editText_password"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:hint="密码"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        <!--模式选择控件-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <RadioGroup
                android:id="@+id/login_ratioGroup_selectMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/login_ratioButton_datamanage_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="数据管理" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/login_ratioButton_heartandblood_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="心电血氧" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/login_ratioButton_device_data_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="仪器数据"
                    android:visibility="visible" />

            </RadioGroup>


        </LinearLayout>


    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

<!--    <TextView-->
<!--        android:gravity="center"-->
<!--        android:text="尚未登录"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"/>-->

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />


    <!--登录按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.52"
        android:orientation="vertical">

        <Button
            android:id="@+id/login_button_login"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/frame_login_button"
            android:text="登      录"
            android:textSize="20dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="18dp" />

    <TextView
        android:id="@+id/login_textView_forgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="(C) Copyright Professor Yu Hua's Research Group of Chong Qing University All Rights Reserved @Author CZ\n\n 软件型号: MedicalDataCollector-V2\n\n 完整版本号：2.1.6"
        android:textSize="11sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        tools:ignore="UselessLeaf">

    </LinearLayout>


</LinearLayout>